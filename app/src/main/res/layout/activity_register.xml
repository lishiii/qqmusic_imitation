<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context="cn.ink.music_6.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/logo2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Register"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark" />


        <TextView />

        <TableRow>

            <TextView android:layout_width="40dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00000000"
                android:text="注册账号："
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_zc_username"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#00000000"
                android:hint="请输入账号"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </TableRow>

        <TextView android:layout_height="10dp" />

        <TableRow>

            <TextView android:layout_width="70dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00000000"
                android:text="密码："
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_zc_pwd"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </TableRow>

        <TextView android:layout_height="10dp" />

        <TableRow>

            <TextView android:layout_width="40dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00000000"
                android:text="确认密码："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_zc_repwd"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </TableRow>

        <TextView android:layout_height="10dp" />

        <TableRow>

            <TextView android:layout_width="40dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00000000"
                android:text="邮箱："
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_zc_email"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#00000000"
                android:hint="请输入邮箱"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:textSize="12dp" />
        </TableRow>

        <Button
            android:id="@+id/registerUser"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/usercode_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#2BAB6D"
            android:gravity="center"
            android:onClick="Fanhui"
            android:text="注    册"
            android:textColor="@android:color/white" />

    </TableLayout>
</LinearLayout>
